@model ReciPick.Domain.DomainModels.Recipe

@{
    ViewData["Title"] = "Delete Recipe";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm rounded-4">
            <div class="card-body">
                <h2 class="card-title text-danger mb-4">Are you sure you want to delete this recipe?</h2>

                <dl class="row">
                    <dt class="col-sm-3">Title</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                    <dt class="col-sm-3">Image URL</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.ImageUrl)</dd>

                    <dt class="col-sm-3">Calories</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Calories)</dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
