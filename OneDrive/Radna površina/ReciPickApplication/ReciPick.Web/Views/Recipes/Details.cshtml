@model ReciPick.Domain.DomainModels.Recipe

@{
    ViewData["Title"] = "Recipe Details";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title">
            }
            <div class="card-body">
                <h1 class="card-title">@Model.Title</h1>
                @if (Model.Calories.HasValue)
                {
                    <p class="card-text"><strong>Calories:</strong> @Model.Calories</p>
                }

                <div class="mt-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3>Ingredients</h3>
                        <a asp-action="AddIngredient" asp-route-recipeId="@Model.Id" class="btn btn-success">Add Ingredient</a>
                    </div>

                    @if (Model.Ingredients != null && Model.Ingredients.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Amount</th>
                                        <th>Unit</th>
                                        <th>Price</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ingredient in Model.Ingredients)
                                    {
                                        <tr>
                                            <td>@ingredient.Name</td>
                                            <td>@ingredient.Amount</td>
                                            <td>@ingredient.Unit</td>
                                            <td>@(ingredient.Price?.ToString("C") ?? "N/A")</td>
                                            <td>
                                                <a asp-controller="Ingredients" asp-action="Edit" asp-route-id="@ingredient.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                                                <a asp-controller="Ingredients" asp-action="Delete" asp-route-id="@ingredient.Id" class="btn btn-sm btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No ingredients added yet.</p>
                    }
                </div>

                <div class="mt-4">
                    <form asp-action="AddToCart" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary btn-lg">Add to Shopping Cart</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Actions</h5>
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit Recipe</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Delete Recipe</a>
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>