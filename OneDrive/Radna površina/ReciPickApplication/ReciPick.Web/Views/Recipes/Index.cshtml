@model IEnumerable<ReciPick.Domain.DomainModels.Recipe>

@{
    ViewData["Title"] = "Recipes";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">🍽️ Recipes</h2>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4">
            ➕ Create Recipe
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var recipe in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100 border-0">
                        @if (!string.IsNullOrEmpty(recipe.ImageUrl))
                        {
                            <img src="@recipe.ImageUrl" class="card-img-top rounded-top" alt="@recipe.Title" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title text-primary">@recipe.Title</h5>
                                @if (recipe.Calories.HasValue)
                                {
                                    <p class="text-muted mb-2">🔥 @recipe.Calories calories</p>
                                }
                                @if (recipe.Ingredients?.Any() == true)
                                {
                                    <p class="small text-secondary">
                                        🧂 @recipe.Ingredients.Count() ingredients
                                    </p>
                                }
                            </div>
                            <div class="btn-group mt-3">
                                <a asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-outline-primary btn-sm">🔍 View</a>
                                <a asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-outline-secondary btn-sm">✏️ Edit</a>
                                <a asp-action="Delete" asp-route-id="@recipe.Id" class="btn btn-outline-danger btn-sm">🗑 Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center mt-5">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h3 class="text-muted">No Recipes Found</h3>
                    <p class="text-secondary">You haven't added any recipes yet.</p>
                    <a asp-action="Create" class="btn btn-success rounded-pill px-4">➕ Add Your First Recipe</a>
                </div>
            </div>
        </div>
    }
</div>
