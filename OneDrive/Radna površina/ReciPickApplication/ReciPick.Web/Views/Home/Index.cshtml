@{
    ViewData["Title"] = "Welcome to ReciPick";
}

<div class="container mt-5 text-center">
    <h1 class="display-3 fw-bold">
        Welcome to <span class="text-success">ReciPick</span>! 🧑‍🍳
    </h1>
    <p class="lead mt-3 mb-4">
        Your smart recipe planner and grocery assistant.
    </p>

    <hr class="my-4" />

    <div class="row justify-content-center mt-5">
        <div class="col-md-5 mb-4">
            <div class="card shadow rounded-4 h-100 border-0">
                <div class="card-body">
                    <h4 class="card-title mb-3">🍲 Browse Recipes</h4>
                    <p class="card-text text-muted">
                        Explore, organize, and edit your favorite recipes in one place.
                    </p>
                    <a asp-controller="Recipes" asp-action="Index" class="btn btn-success w-100 mt-3">
                        View Recipes
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-5 mb-4">
            <div class="card shadow rounded-4 h-100 border-0">
                <div class="card-body">
                    <h4 class="card-title mb-3">🛒 Shopping Cart</h4>
                    <p class="card-text text-muted">
                        Build your grocery list directly from your saved recipes.
                    </p>
                    <a asp-controller="ShoppingCarts" asp-action="Index" class="btn btn-warning w-100 mt-3">
                        Go to Cart
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
