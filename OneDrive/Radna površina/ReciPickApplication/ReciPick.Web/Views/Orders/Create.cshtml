@model ReciPick.Domain.DomainModels.Order

@{
    ViewData["Title"] = "Create Order";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">🧾 Create Order</h3>

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label">User</label>
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOrdered" class="form-label">Date Ordered</label>
                            <input asp-for="DateOrdered" class="form-control" type="datetime-local" />
                            <span asp-validation-for="DateOrdered" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success rounded-pill">➕ Create</button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">↩️ Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
