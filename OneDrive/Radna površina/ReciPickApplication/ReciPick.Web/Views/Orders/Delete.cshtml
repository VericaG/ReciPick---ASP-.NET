@model ReciPick.Domain.DomainModels.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-body">
                    <h2 class="card-title text-danger mb-4 text-center">🗑️ Confirm Delete</h2>
                    <p class="text-center fs-5">Are you sure you want to delete this order?</p>

                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">User ID</dt>
                        <dd class="col-sm-8">@Model.User?.Id</dd>

                        <dt class="col-sm-4 fw-bold">Date Ordered</dt>
                        <dd class="col-sm-8">@Model.DateOrdered?.ToString("MMM dd, yyyy HH:mm")</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">⬅️ Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete Order</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
