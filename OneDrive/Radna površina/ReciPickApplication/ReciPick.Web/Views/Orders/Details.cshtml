@model ReciPick.Domain.DomainModels.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <div class="row">
        <!-- Main Details Column -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title mb-4">
                        Order #@Model.Id.ToString().Substring(0, 8)
                    </h2>

                    <div class="mb-3">
                        <p class="mb-1"><strong>Order Date:</strong> @Model.DateOrdered?.ToString("MMM dd, yyyy HH:mm")</p>
                        <p class="mb-1"><strong>Total Amount:</strong> @Model.TotalAmount?.ToString("C")</p>
                    </div>

                    <h4 class="mt-4">🧾 Order Items</h4>

                    @if (Model.Items != null && Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped mt-3">
                                <thead class="table-light">
                                    <tr>
                                        <th>Ingredient</th>
                                        <th>Amount</th>
                                        <th>Unit</th>
                                        <th>Price</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>@item.Ingredient?.Name</td>
                                            <td>@item.Amount</td>
                                            <td>@item.Unit</td>
                                            <td>@(item.Ingredient?.Price?.ToString("C") ?? "N/A")</td>
                                            <td>@(((item.Amount ?? 0) * (item.Ingredient?.Price ?? 0)).ToString("C"))</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No items in this order.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Side Actions Column -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title mb-3">📦 Actions</h5>
                    <div class="d-grid gap-2">
                        <a asp-action="Index" class="btn btn-outline-primary">⬅️ Back to Orders</a>
                        <a asp-controller="Recipes" asp-action="Index" class="btn btn-outline-secondary">🍽️ Browse Recipes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
