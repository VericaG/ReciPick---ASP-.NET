@model ReciPick.Domain.DomainModels.Ingredient

@{
    ViewData["Title"] = "Delete Ingredient";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-body">
                    <h3 class="card-title text-danger mb-4 text-center">🗑️ Delete Ingredient</h3>

                    <p class="text-center text-muted">Are you sure you want to delete this ingredient?</p>

                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Amount</dt>
                        <dd class="col-sm-8">@Model.Amount</dd>

                        <dt class="col-sm-4">Unit</dt>
                        <dd class="col-sm-8">@Model.Unit</dd>

                        <dt class="col-sm-4">Recipe</dt>
                        <dd class="col-sm-8">@Model.Recipe?.Title</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="text-center mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger rounded-pill px-4">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary rounded-pill ms-2 px-4">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
