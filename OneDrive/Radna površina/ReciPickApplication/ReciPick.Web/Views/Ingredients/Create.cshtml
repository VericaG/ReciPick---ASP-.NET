@model ReciPick.Domain.DomainModels.Ingredient

@{
    ViewData["Title"] = "Create Ingredient";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">➕ Add New Ingredient</h3>

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Amount</label>
                            <input asp-for="Amount" class="form-control" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Unit" class="form-label">Unit</label>
                            <input asp-for="Unit" class="form-control" />
                            <span asp-validation-for="Unit" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RecipeId" class="form-label">Recipe</label>
                            <select asp-for="RecipeId" class="form-select" asp-items="ViewBag.RecipeId"></select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success rounded-pill">✅ Create Ingredient</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="Index" class="btn btn-link">← Back to Ingredients</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
