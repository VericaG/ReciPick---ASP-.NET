@model IEnumerable<ReciPick.Domain.DomainModels.Ingredient>

@{
    ViewData["Title"] = "Ingredients";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">🧂 Ingredients</h2>
        <a asp-action="Create" class="btn btn-success rounded-pill shadow-sm">➕ Add New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm rounded-3">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Amount)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Unit)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Recipe)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                        <td>@Html.DisplayFor(modelItem => item.Unit)</td>
                        <td>@item.Recipe?.Title</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">✏️ Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">🔍 View</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">🗑️ Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
